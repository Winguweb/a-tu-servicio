header.site-header-cell
  div
    = link_to root_path do
      = image_tag image_path("logos/atsb-w.svg")
  div
    = link_to 'Inicio', root_path, class: current_page?(:controller => 'home', :action => 'show') ? 'active' : ''
    = link_to 'Mapa de Servicios', services_path, class: current_page?(:controller => 'home', :action => 'services') ? 'active' : ''
    = link_to 'El Proyecto', about_path, class: current_page?(:controller => 'home', :action => 'about') ? 'active' : ''
  div
    - if current_page?(:controller => 'home', :action => 'services')
      a.site-menu-button v-on:click="actionClicked"
        i :class="action"

javascript:
  $(function() {
    ATSB.Components['components/site-header']()
  });
